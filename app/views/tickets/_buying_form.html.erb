<%= form_for :ticket, url: new_ticket_url do |f| %>
	<%= f.text_field :showtime_id, value: showtime.id, hidden: true %>
	<%= label_tag :email, "Email:" %>
	<%= f.text_field :email %>
	<%= label_tag :credit_card_number, "Enter credit card number:" %>
	<%= f.text_field :credit_card_number %>
	<%= f.submit "Buy" %>
<% end %>