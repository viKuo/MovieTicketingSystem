<%= render 'messages/error' %>

<%= form_for Ticket.new, method: "POST" do |f| %>
	<%= f.text_field :showtime_id, value: showtime.id, hidden: true %>
	<%= label_tag :customer, "Email:" %>
	<%= f.text_field :customer %>
	<%= label_tag :credit_card_number, "Enter credit card number:" %>
	<%= text_field_tag :credit_card_number %>
	<%= f.submit "Buy" %>
<% end %>